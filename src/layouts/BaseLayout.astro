---
import '../styles/styles.scss';

export type Props = {
  title: string;
};

const { title } = Astro.props as Props;
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{ title }</title>
	</head>
	<body>
		<main>
      <slot />
    </main>
	</body>
</html>